{
  "name": "@godwoken-web3/api-server",
  "version": "0.8.1-rc1",
  "private": true,
  "scripts": {
    "start": "concurrently \"tsc -w\" \"DEBUG=godwoken-web3-api:server nodemon ./bin/cluster\"",
    "start:prod": "NODE_ENV=production DEBUG=godwoken-web3-api:server node ./bin/cluster",
    "test": "ava",
    "fmt": "prettier --write \"{migrations,tests}/**/*.js\" app.js src/* package.json",
    "lint": "eslint -c ../../.eslintrc.js \"src/**/*.ts\"",
    "reset_database": "NODE_ENV=test knex migrate:down && knex migrate:up && knex seed:run",
    "knex": "knex",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate-accounts": "ts-node ./src/migrate-accounts.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.18.0-rc1",
    "@godwoken-web3/godwoken": "0.8.1-rc1",
    "@newrelic/native-metrics": "^7.0.1",
    "@polyjuice-provider/base": "^0.0.1-rc12",
    "@sentry/node": "^6.11.0",
    "blake2b": "2.1.3",
    "ckb-js-toolkit": "^0.10.2",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ethereumjs-util": "^7.0.9",
    "express": "^4.17.1",
    "express-ws": "^5.0.2",
    "http-errors": "~1.6.3",
    "immutable": "^4.0.0-rc.12",
    "jayson": "^3.6.4",
    "keccak256": "^1.0.2",
    "knex": "^0.95.7",
    "leveldown": "^6.0.1",
    "levelup": "^5.0.1",
    "morgan": "~1.9.1",
    "newrelic": "^8.1.0",
    "pg": "^8.5.1",
    "redis": "^4.0.0-rc.3",
    "rlp": "^2.2.6",
    "secp256k1": "^4.0.2",
    "web3-eth-abi": "^1.6.0"
  },
  "devDependencies": {
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^4.3.3",
    "@types/newrelic": "^7.0.2",
    "@types/secp256k1": "^4.0.2",
    "ava": "^3.15.0",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
